<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sf_dark_blue"
        tools:context=".view.fragment.RecentDocumentFragment">

        <ImageView
            android:id="@+id/back_iv_recent_doc_fragment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <ImageView
            android:id="@+id/selected_doc_iv"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_below="@id/back_iv_recent_doc_fragment"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:transitionName="rd_image_big"
            android:src="@drawable/sample_doc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/back_iv_recent_doc_fragment"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/selected_doc_iv"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_light"
                android:text="Untitled-1"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_edit_24" />

        </LinearLayout>

<!--        <androidx.cardview.widget.CardView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="100"-->


    </RelativeLayout>
</layout>